<%- content_for :nav do %>
  <li><a href="/issues/1">First issue</a></li>
<%- end -%>

<h1>Listing issues</h1>

<%= render "search" %>

<table>
  <tr>
    <th>Title <%= link_to "sort", issues_path(sort: "title") %></th>
    <th>Description</th>
    <th>No followers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.title %></td>
    <td><%= issue.description %></td>
    <td><%= issue.no_followers %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
